# 应用配置
APP_TITLE=Profile Manager
APP_VERSION=0.2.0

# Token 过期时间（天）
TOKEN_EXPIRES_DAYS=7

# CORS 配置（生产环境必须设置）
# 多个域名用逗号分隔
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MySQL 数据库配置
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DB=manage_profile

# 或者使用完整的数据库 URL（优先级更高）
# DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4

# 数据库连接池配置（可选）
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# 限流配置（可选）
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60
